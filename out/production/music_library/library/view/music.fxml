<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="library.view.music_controller"
            prefHeight="400" prefWidth="600">
    <Button fx:id = "delete_song" text = "Delete"
            AnchorPane.topAnchor="0"
            AnchorPane.leftAnchor="0" />
    <Button fx:id = "edit_song" text = "Edit"
            AnchorPane.topAnchor="0"
            AnchorPane.rightAnchor="0" />
    <Button fx:id = "new_song" text = "Add"
            AnchorPane.topAnchor="0"
            AnchorPane.leftAnchor="200"
            AnchorPane.rightAnchor="200"/>
    <ListView fx:id = "list_view"
              AnchorPane.topAnchor="25"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" />
</AnchorPane>
